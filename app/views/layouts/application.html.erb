<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if logged_in? %>
      <%= button_to("Sign Out", session_url, method: :delete) %>
    <% end %>
    <ul>
      <% flash[:errors].try(:each) do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </header>

<%= yield %>

</body>
</html>
