<h1><%= @album.title %></h1>

<ul>
  <li>Artist: <%= @album.band.name %> </li>
  <li>Album type: <%=@album.album_type.capitalize  %></li>
</ul>

<h4>Track Listing</h4>
<ol>
  <%= render @album.tracks %>
</ol>


<%= button_to("Add Track", new_album_track_url(@album), method: :get) %>
<br>
<%= button_to("Edit Album", edit_album_url(@album), method: :get) %>
<br>
<%= button_to("Delete Album", album_url(@album), method: :delete) %>
<br>
<%= link_to("<< Back to band", band_url(@album.band)) %>
